/**
 * @fileoverview Firestore Security Rules for both UCS Index Tracker and Impact Balance applications.
 *
 * This ruleset combines the security requirements for two separate applications
 * sharing the same Firestore database.
 *
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --- Helper Functions ---
    function isAdmin() {
      return exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid));
    }

    function isSignedIn() {
      return request.auth != null;
    }

    // --- Impact Balance Calculator Rules ---

    /**
     * @description Manages calculated event impact data. Anyone can create (save) a calculation.
     * Only admins can read, update, or delete the full list of events.
     * @path /impact-balance-events/{eventId}
     */
    match /impact-balance-events/{eventId} {
      allow create: if true; // Anyone can create an event calculation
      allow read, list, update, delete: if isAdmin(); // Only admins can manage the data
    }

    /**
     * @description Manages system parameters for the Impact Balance Calculator.
     * The settings are public-readable but only admin-writable.
     * @path /impact-balance-settings/{docId}
     */
    match /impact-balance-settings/{docId} {
      allow get: if true; // Settings are public
      allow list, create, update, delete: if isAdmin(); // Only admins can change settings
    }


    // --- UCS Index Tracker Rules (from user) ---

    /**
     * @description Manages user profile data.
     * @path /users/{userId}
     */
    match /users/{userId} {
      function isOwner() {
        return request.auth.uid == userId;
      }
      allow get: if isOwner();
      allow list: if false;
      allow create: if isSignedIn() && isOwner() && request.resource.data.id == userId;
      allow update: if isSignedIn() && isOwner() && resource.data.id == userId;
      allow delete: if isSignedIn() && isOwner() && resource.data.id == userId;
    }

    /**
     * @description Manages admin roles.
     * @path /roles_admin/{userId}
     */
    match /roles_admin/{userId} {
      allow get: if isSignedIn();
      allow list, create, update, delete: if isAdmin();
    }

    /**
     * @description Manages commodity definitions.
     * @path /commodities/{commodityId}
     */
    match /commodities/{commodityId} {
      allow get, list: if true;
      allow create, update, delete: if isAdmin();
    }
    
    /**
     * @description Manages all other collections from the UCS Index Tracker app.
     * Publicly readable, but only admins can modify.
     * This covers: Agua_CRS, audit_logs, boi_gordo, carbono, carbono_crs, ch2o_agua,
     * custo_agua, eur, madeira, milho, pdm, settings, soja, ucs, ucs_ase,
     * ucs_ultimos_dados, usd, users, valor_uso_solo, vmad, vus
     */
    match /{collection}/{docId} {
       // This rule applies to any collection not explicitly matched above
       allow get, list: if true;
       allow create, update, delete: if isAdmin();
    }


    /**
     * @description Manages alert configurations for each user.
     * @path /users/{userId}/alerts/{alertId}
     */
    match /users/{userId}/alerts/{alertId} {
      function isOwner() {
        return request.auth.uid == userId;
      }
      allow get, list: if isSignedIn() && isOwner();
      allow create: if isSignedIn() && isOwner() && request.resource.data.userId == userId;
      allow update: if isSignedIn() && isOwner() && resource.data.userId == userId;
      allow delete: if isSignedIn() && isOwner() && resource.data.userId == userId;
    }
  }
}
