rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // System settings are public to read for calculations,
    // but only admins can write/update them.
    match /systemSettings/{docId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Anyone can create an event record by using the calculator.
    // Only admins can view the list of all past events.
    // No one can update or delete records to maintain data integrity.
    match /events/{eventId} {
      allow create: if true;
      allow list: if request.auth != null;
      allow get: if request.auth != null; // Also allow admin to get single doc
      allow update, delete: if false;
    }
  }
}
